<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
       https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="create-source-addresses-schema" author="Vladislav Kabral">
        <comment>Creation source addresses' schema</comment>
        <createTable tableName="source_addresses">
            <column name="id" type="bigint" autoIncrement="true" startWith="1">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="address_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="ride_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="source_addresses" baseColumnNames="ride_id" constraintName="ride_id_sour_fk"
                                 referencedTableName="rides"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="source_addresses" baseColumnNames="address_id" constraintName="address_id_sour_fk"
                                 referencedTableName="addresses"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>