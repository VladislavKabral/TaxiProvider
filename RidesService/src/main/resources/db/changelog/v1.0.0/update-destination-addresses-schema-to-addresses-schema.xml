<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
       https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    
    <changeSet id="update-destination-addresses-schema-to-addresses-schema" author="Vladislav Kabral">
        <comment>Changing destination addresses' schema to addresses' schema</comment>
        <dropColumn tableName="destination_addresses" columnName="address"/>
        <addColumn tableName="destination_addresses">
            <column name="lat" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="lon" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        
        <renameTable oldTableName="destination_addresses" newTableName="addresses"/>
    </changeSet>

</databaseChangeLog>