<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
       https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="update-rides-schema-according-new-addresses-schema" author="Vladislav Kabral">
        <comment>Updating rides' schema according destination and source addresses' schemas</comment>
        <dropColumn tableName="rides" columnName="source_address"/>
        <addColumn tableName="rides">
            <column name="source_address_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>